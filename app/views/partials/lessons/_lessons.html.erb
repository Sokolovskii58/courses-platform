
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<div class="container">
    <div class="shop-default shop-cards shop-tech">
        <div class="row">
          <% @lessons.each do |lesson| %>

            <div class="col-md-6 mb-3">
                <div class="block product no-border z-depth-2-top z-depth-2--hover">
                    <div class="block-image">
                        <a href="#">
                            <img src="https://via.placeholder.com/550x350/87CEFA/000000" class="img-center">
                        </a>
                        <span class="product-ribbon product-ribbon-right product-ribbon--style-1 bg-blue text-uppercase">New</span>
                    </div>

                    <div class="block-body text-center">
                        <h3 class="heading heading-5 strong-600 text-capitalize">
                            <a href="/lessons/<%= lesson.id %>">
                              <%= lesson.title %>
                            </a>
                        </h3>
                        <p class="product-description">
                            <%= lesson.content %>
                        </p>
                         <div class="product-buttons mt-4">
                            <div class="row align-items-center">
                              <div class="col-12">
                                <% if lesson.course.user == current_user %>
                                <div class="btn-group mb-3">
                                  <%= link_to "Edit Lesson", edit_lesson_path(lesson), class: "btn btn-primary" %>
                                  <%= link_to 'Delete Lesson', lesson, method: :delete, class: "btn btn-primary", data: { confirm: 'Are you sure?' } %>
                                </div>
                                 <% end %>
                             </div>

                                 <div class="col-12">
                                   <a href="/lessons/<%= lesson.id %>" class="btn btn-primary">Start Lesson</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% end %>
        </div>
    </div>
</div>
