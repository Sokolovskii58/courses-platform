
<%= simple_form_for(@course) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-12">
					<div class="wrapper">
						<div class="row no-gutters">
							<div class="col-lg-8 col-md-7 order-md-last d-flex align-items-stretch">
								<div class="contact-wrap w-100 p-md-5 p-4">
									<h3 class="mb-4">Create Course</h3>
									<form method="POST" id="contactForm" name="contactForm" class="contactForm">
										<div class="row">
											<div class="col-md-6">
												<div class="form-group">
                          <%= f.input :title, class: "form-control", placeholder: "Title"  %>
												</div>
											</div>
											<div class="col-md-6">
												<div class="form-group">
													  <%= f.input :price, class: "form-control"  %>
												</div>
											</div>
                      <div class="col-md-6">
												<div class="form-group">
                          <%= f.input :level, class: "form-control", placeholder: "Title", collection: ['Beginner', 'Entry', 'Advanced']  %>
												</div>
											</div>
											<div class="col-md-6">
												<div class="form-group">
													  <%= f.input :lang, class: "form-control"  %>
												</div>
											</div>
											<div class="col-md-12">
												<div class="form-group">
                          <%= f.input :short_description, class: "form-control"  %>
                        </div>
											</div>
											<div class="col-md-12">
												<div class="form-group">
                          <%= f.label :description %>
													 <%= f.rich_text_area :description %>
												</div>
											</div>
											<div class="col-md-12">
												<div class="form-group">
                          <%= f.button :submit, class: "btn btn-primary" %>
													<div class="submitting"></div>
												</div>
											</div>
										</div>
									</form>
								</div>
							</div>
							<div class="col-lg-4 col-md-5 d-flex align-items-stretch">
								<div class="info-wrap bg-primary w-100 p-md-5 p-4">
									<h3>Let's create your courses</h3>
									<p class="mb-4">It's really easy to create and start making money on your own course</p>
									<div class="dbox w-100 d-flex align-items-start">
										<div class="icon d-flex align-items-center justify-content-center">
											<i class="fas fa-heading"></i>
										</div>
										<div class="text pl-3">
											<p><span>Name:</span> Come up with an original title for your course</p>
										</div>
									</div>
									<div class="dbox w-100 d-flex align-items-center">
										<div class="icon d-flex align-items-center justify-content-center">
											<i class="far fa-money-bill-alt"></i>
										</div>
										<div class="text pl-3">
											<p><span>Price:</span> Set a price for your course</p>
										</div>
									</div>
									<div class="dbox w-100 d-flex align-items-center">
										<div class="icon d-flex align-items-center justify-content-center">
											<i class="fas fa-level-up-alt"></i>
										</div>
										<div class="text pl-3">
											<p><span>Level:</span> Indicate the current level of your course</p>
										</div>
									</div>
									<div class="dbox w-100 d-flex align-items-center">
										<div class="icon d-flex align-items-center justify-content-center">
											<i class="fas fa-align-right"></i>
										</div>
										<div class="text pl-3">
											<p><span>Description:</span> Make a quality description for your course</p>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>


			</div>
		</div>
	</section>
  <% end %>
